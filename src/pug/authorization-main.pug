doctype html
html(lang="ru-RU")
	head
		include modules/head.pug
	body
		.authorization-main

			.authorization__left
				.authorization__left-inner
					h2.title Вход
					form(action="get")
						.authorization__inputs
							label(for="") 
								span Телефон
								input(type="text" value="+7")
							label(for="") 
								span Пароль
								input(type="password")
						.authorization__remember
							input(type="checkbox" id="remember")
							label(for="remember")
								span Запомнить меня
							span.recovery-pas Забыли пароль?
						.authorization__btn
							input.main-button(type="submit" value="Войти")
					.authorization__registration
						span Вы еще не зарегистрированы?
						a(href="#") Зарегистрироваться

			.authorization__right


		include modules/script.pug
